<%- include('../partials/header') %>
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Welcome to BookPhoto</h1>
            <p class="lead text-muted">View all print collections around the world</p>
            <a href="/prints/new" class="btn btn-primary my-2">Add new print</a>

        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% prints.forEach(function(prints){ %>
                    <div class="col">
                        <div class="card mb-4 box-shadow">
                            <img src="<%=prints.image %>" class="index-image" height="300px">
                            <div class="card-body">
                                <p class="card-text">Title : <%= prints.name %>
                                </p>
                                <p class="card-text">Artist : <%= prints.artist %>
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="/prints/<%= prints._id %>"
                                            class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>